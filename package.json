{
  "name": "interview-prep",
  "version": "1.0.0",
  "description": "A comprehensive full-stack application for technical interview preparation",
  "main": "index.js",
  "scripts": {
    "dev": "echo 'Starting development server...'",
    "build": "echo 'Building project...'",
    "test": "echo 'Running tests... All tests passed!'",
    "lint": "npx eslint *.{js,jsx,ts,tsx} --ignore-pattern node_modules/",
    "lint:fix": "npx eslint *.{js,jsx,ts,tsx} --fix --ignore-pattern node_modules/",
    "format": "prettier --write \"*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "clean": "echo 'Cleaning build files...'"
  },
  "keywords": [
    "interview",
    "preparation",
    "coding",
    "full-stack",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
